<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.webmyne.rightway.Bookings.BookCabFragment">


    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/background_border"
        android:layout_weight="2"
        android:layout_height="match_parent" >

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/imgPreviousForm"
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:rotation="180"
                android:src="@drawable/ic_forward"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/headerTitleForm"

                app:customTypeface="@string/bold"
                tools:ignore="MissingPrefix"
                android:gravity="center"
                android:layout_weight="1"
                android:text="WANT TO BOOK A CAB?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="@dimen/text_size_medium" />

            <ImageView

                android:visibility="invisible"
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="180"
                android:src="@drawable/ic_forward"
                android:scaleType="centerInside" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d1d1d1"></View>


        <com.webmyne.rightway.CustomComponents.NonSwipeableViewPager
            android:id="@+id/nonSwipableViewPagerForm"
            android:layout_width="match_parent"
            android:background="@color/actionbar"
            android:layout_height="match_parent">

        </com.webmyne.rightway.CustomComponents.NonSwipeableViewPager>


    </LinearLayout>


</LinearLayout>
